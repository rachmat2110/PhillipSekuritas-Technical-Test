<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="modelTrade"
            type="com.technical.philliptrade.model.ModelTraderMarket" />
        <variable
            name="time"
            type="String" />
        <variable
            name="chg"
            type="String" />
    </data>

    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <TextView
                android:id="@+id/tvStockName"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{modelTrade.stock_name}"
                android:textColor="@color/white"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@{modelTrade.price}"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvChg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@{chg}"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvVol"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@{modelTrade.vol}"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvAct"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@{modelTrade.act}"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:text="@{time}"
                android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey7"/>

    </LinearLayout>

</layout>